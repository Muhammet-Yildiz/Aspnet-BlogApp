@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<BlogApp.Models.Blog>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Banner</th>
      <th scope="col">CreatedDateTime</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.BlogId</th>
            <th scope="row">@item.User.Email</th>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>
  <img
   style="width: 55px; height: 55px"
      src="data:image/png;base64,@Html.Raw(item.User.ProfileImage)" />

            </td>
            <td>@item.CreatedDateTime</td>

            <td>
                
    <a href="/Blog/Edit/@item.BlogId" class="btn btn-warning"> Edit  </a>

            </td>
            <td>
    <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger"> Delete  </a>

            </td>

        </tr>
        
    }

  </tbody>
</table>